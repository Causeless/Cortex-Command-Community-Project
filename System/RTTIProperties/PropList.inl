namespace RTE
{

//--------------------------------------------------------------------------------------------------------------------
// CONSTRUCTORS / DESTRUCTOR
//--------------------------------------------------------------------------------------------------------------------

INLINE PropList::PropList()
{}

//--------------------------------------------------------------------------------------------------------------------
// ACCESS
//--------------------------------------------------------------------------------------------------------------------

INLINE Property *PropList::GetFirstProp()
{
    m_CurrentProp = m_Properties.begin();
    return GetNextProp();
}

INLINE Property *PropList::GetNextProp()
{
    if (m_CurrentProp == m_Properties.end())
        return NULL;
    Property *pProp = *m_CurrentProp;
    + + m_CurrentProp;
    return pProp;
}

//--------------------------------------------------------------------------------------------------------------------
// MANAGEMENT
//--------------------------------------------------------------------------------------------------------------------

INLINE void PropList::AddProp(Property *pProp)
{
    m_Properties.push_back(pProp);
}

//--------------------------------------------------------------------------------------------------------------------

} // namespace

#endif // _PROPLIST_INL_
