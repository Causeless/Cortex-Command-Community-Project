{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Debug",
      "dependsOn": ["Configure Debug", "Meson: Build all targets"],
      "dependsOrder": "sequence"
    },
    {
      "label": "Build Release",
      "dependsOn": ["Configure Release", "Meson: Build all targets"],
      "dependsOrder": "sequence"
    },
    {
      "label": "Configure Debug",
      "type": "process",
      "problemMatcher": ["$meson-gcc"],
      "command": "meson",
      "args": [
        "configure",
        "--buildtype=debug",
        "-Ddebug_type=${input:debug_type}",
        "-Db_lto=false",
        "build"
      ]
    },
    {
      "label": "Configure Release",
      "type": "process",
      "problemMatcher": ["$meson-gcc"],
      "command": "meson",
      "args": [
        "configure",
        "--buildtype=release",
        "-Ddebug_type=release",
        "-Db_lto=true",
        "build"
      ]
    },
    {
      "type": "meson",
      "mode": "build",
      "problemMatcher": ["$meson-gcc"],
      "group": "build"
    }
  ],
  "inputs": [
    {
      "type": "pickString",
      "id": "debug_type",
      "description": "What debug level the game should compile at.",
      "default": "minimal",
      "options": ["release", "minimal", "full"]
    }
  ]
}
