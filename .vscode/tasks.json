{
  "version": "2.0.0",
  "tasks": [
    {
        "label": "Setup Meson",
        "runOptions": {
          "runOn": "folderOpen"
        },
        "type": "process",
        "problemMatcher": ["$meson-gcc"],
        "command": "meson",
        "args": [
          "setup",
          "${config:mesonbuild.buildFolder}"
        ],
        "osx":{
          "options": {
            "env": {
              "CC": "gcc-12",
              "CXX": "g++-12",
              "CXX_LD": "g++-12"
            }
          }
        }
    },
    {
      "label": "Build Debug (Release)",
      "dependsOn": ["Configure Debug (Release)", "Meson: Build all targets"],
      "dependsOrder": "sequence"
    },
    {
      "label": "Build Debug (Minimal)",
      "dependsOn": ["Configure Debug (Minimal)", "Meson: Build all targets"],
      "dependsOrder": "sequence"
    },
    {
      "label": "Build Debug (Full)",
      "dependsOn": ["Configure Debug (Full)", "Meson: Build all targets"],
      "dependsOrder": "sequence"
    },
    {
      "label": "Build Release",
      "dependsOn": ["Configure Release", "Meson: Build all targets"],
      "dependsOrder": "sequence"
    },
    {
      "label": "Configure Debug (Release)",
      "type": "process",
      "problemMatcher": ["$meson-gcc"],
      "command": "meson",
      "args": [
        "configure",
        "--buildtype=debug",
        "-Ddebug_type=release",
        "-Db_lto=false",
        "${config:mesonbuild.buildFolder}"
      ]
    },
    {
      "label": "Configure Debug (Minimal)",
      "type": "process",
      "problemMatcher": ["$meson-gcc"],
      "command": "meson",
      "args": [
        "configure",
        "--buildtype=debug",
        "-Ddebug_type=minimal",
        "-Db_lto=false",
        "${config:mesonbuild.buildFolder}"
      ]
    },
    {
      "label": "Configure Debug (Full)",
      "type": "process",
      "problemMatcher": ["$meson-gcc"],
      "command": "meson",
      "args": [
        "configure",
        "--buildtype=debug",
        "-Ddebug_type=full",
        "-Db_lto=false",
        "${config:mesonbuild.buildFolder}"
      ]
    },
    {
      "label": "Configure Release",
      "type": "process",
      "problemMatcher": ["$meson-gcc"],
      "command": "meson",
      "args": [
        "configure",
        "--buildtype=release",
        "-Ddebug_type=release",
        "-Db_lto=true",
        "${config:mesonbuild.buildFolder}"
      ]
    },
    {
      "type": "meson",
      "mode": "build",
      "problemMatcher": ["$meson-gcc"],
      "group": "build"
    }
  ]
}
