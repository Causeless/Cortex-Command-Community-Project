{
  "version": "2.0.0",
  "tasks": [
    {
        "label": "Setup Meson",
        "type": "process",
        "problemMatcher": ["$meson-gcc"],
        "command": "meson",
        "args": [
          "setup",
          "${config:mesonbuild.buildFolder}"
        ],
        "osx":{
          "options": {
            "env": {
              "CC": "gcc-12",
              "CXX": "g++-12",
              "CXX_LD": "g++-12"
            }
          }
        }
    },
    {
      "label": "Build Debug",
      "dependsOn": ["Configure Debug", "Meson: Build all targets"],
      "dependsOrder": "sequence"
    },
    {
      "label": "Build Release",
      "dependsOn": ["Configure Release", "Meson: Build all targets"],
      "dependsOrder": "sequence"
    },
    {
      "label": "Configure Debug",
      "type": "process",
      "problemMatcher": ["$meson-gcc"],
      "command": "meson",
      "args": [
        "configure",
        "--buildtype=debug",
        "-Ddebug_type=${input:debug_type}",
        "-Db_lto=false",
        "${config:mesonbuild.buildFolder}"
      ]
    },
    {
      "label": "Configure Release",
      "type": "process",
      "problemMatcher": ["$meson-gcc"],
      "command": "meson",
      "args": [
        "configure",
        "--buildtype=release",
        "-Ddebug_type=release",
        "-Db_lto=true",
        "${config:mesonbuild.buildFolder}"
      ]
    },
    {
      "type": "meson",
      "mode": "build",
      "problemMatcher": ["$meson-gcc"],
      "group": "build"
    }
  ],
  "inputs": [
    {
      "type": "pickString",
      "id": "debug_type",
      "description": "What debug level the game should compile at.",
      "default": "minimal",
      "options": ["release", "minimal", "full"]
    }
  ]
}
